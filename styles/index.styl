.trame--bg
  background-image url('/img/trame.png')
  background-size 831px 542px
  background-repeat repeat
  background-color #fff

  &.dark
    background-image url('/img/trame-dark.png')

.logo-2019
  max-width 700px
  margin 0 auto

.logos, .logos-small
  display flex
  justify-content space-between
  flex-wrap wrap
  align-items center

  img
    flex 1 0 15%
    margin 0 14px

.logos
  display none

.spacing-group
  height 180px

  @media only screen and (max-width 986px)
    height 0

$k = 2

#logo-a
  height: $k * 45px

#logo-b
  height: $k * 33px

#logo-1
  height: $k * 31px

#logo-2
  height: $k * 35px

#logo-3
  height: $k * 27px

#logo-4
  height: $k * 19px

#logo-5
  height: $k * 20px

#logo-6
  height: $k * 30px

#logo-7
  height: $k * 41px

#logo-8
  height: $k * 34px

.date-typo
  padding-right 14px

.groups
  position relative

  .group
    padding-bottom 34px

    h1
      max-width 510px
      margin-bottom 10px
      transition color 0.3s ease

    p
      line-height 1
      max-width 350px
      transition color 0.3s ease

      &.big
        max-width 470px

    img
      width 37%
      max-width 480px
      position absolute
      top 38px
      right 52px

    img.date
      z-index 0

    img.group-img
      z-index 1
      opacity 0
      transition opacity 0.3s ease

  a:hover
    .group
      h1, p
        color $white

      img.group-img
        opacity 1

  &.friday
    padding-bottom 100px

    .new-window
      margin-left 15px

  &.saturday
    .group
      float right
      text-align right

      p
        float right

      img
        right auto
        left 52px

.new-window.rebus
  position absolute
  top 22px
  right 52px

.rebus-rebut
  path
    transition fill 0.3s ease

a:hover
  .rebus-rebut
    path
      fill $green

@media only screen and (max-width 1249px)
  .date-list
    h3:nth-child(5)
      display none

@media only screen and (max-width 986px)
  .groups
    .group
      img.date
        display none

      img
        width 100%
        max-width 480px
        position static
        padding-top 25px
        padding-bottom 15px

      img.group-img
        opacity 1

    &.friday
      padding-bottom 5%

@media only screen and (max-width 1011px)
  .date-list
    h3:nth-child(4)
      display none

@media only screen and (max-width 781px)
  .date-list
    h3:nth-child(3)
      display none

@media only screen and (max-width 565px)
  .date-list
    h3:nth-child(2)
      display none

@media only screen and (max-width 808px)
  .date-typo
    padding-right 52px

  .logos-small
    img
      margin 10px 40px

@media only screen and (max-width 688px)
  .logos-small
    img
      margin 10px 30px

@media only screen and (max-width 608px)
  .logos-small
    img
      margin 10px 20px

@media only screen and (max-width 528px)
  .logos-small
    img
      margin 10px 15px